{
  "name": "dchat",
  "version": "1.0.0",
  "main": "public/electron.js",
  "homepage": "./",
  "author": {
    "name": "Arleson Leandro"
  },
  "description":"aaaa",
  "scripts": {
    "build:client": "esbuild src/index.js --bundle --outfile=public/bundle.js --loader:.js=jsx",
    "build:server": "esbuild src/server/server.js --bundle --outfile=public/server.js  --platform=node --loader:.js=jsx",
    "build:electron": "electron-packager .",
    "build": "npm run build:client && npm run build:server",
    "start:server": "node public/server.js",
    "start": "electron .",
    "dev": "npm run build && npm run start",
    "electron:package:win": "electron-builder --win -c.extraMetadata.main=public/electron.js"
  },
  "build": {
    "appId": "com.dchat.arleson",
    "productName": "DChat",
    "icon":"public/DChat.ico",
    "files": [
      "public/**/*"
    ]
  },
  "keywords": [],
  "license": "ISC",
  "dependencies": {
    "discord.js": "^14.11.0",
    "express": "^4.18.2",
    "socket.io": "^4.6.2",
    "socket.io-client": "^4.6.2"
  },
  "devDependencies": {
    "install": "^0.13.0",
    "npm": "^9.7.2",
    "electron-builder": "^24.6.3",
    "electron": "^25.2.0",
    "esbuild": "^0.18.12",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.14.1"
  }
}
